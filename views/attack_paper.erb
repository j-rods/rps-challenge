<html>
  <head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <!-- styles -->
    <link rel="stylesheet" type="text/css" href="styles.css">
    <!-- fonts -->
    <link href="https://fonts.googleapis.com/css?family=Space+Mono" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
  </head>
  <body>
    <form class ="back-to-home" method='get' action='/'>
      <button type="submit" value="Home" class="button btn btn-default">
        Home
      </button>
    </form>
    <div class="gameplay-title">
      <h2> <%= @player_1 %> picked paper.</h2>
    </div>
    <% if $player_2.random_attack == "Rock" %>
      <!-- img for Paper vs Rock -->
      <div class="attack">
        <div class="rps-challenge">
          <img src="paper-win.png">
          <img src="rock.png">
        </div>
      </div>
      <p>Stoney shows rock!</p>
      <p>Paper suffocated rock, woop woop! <%= @player_1 %> wins!</p>
    <audio autoplay="false">
      <source src="win.wav" type="audio/mpeg">
      Your browser does not support the audio element.
    </audio>
    <% elsif $player_2.random_attack == "Paper" %>
      <!-- img for Paper vs Paper -->
      <div class="attack">
        <div class="rps-challenge">
          <img src="paper.png">
          <img src="paper.png">
        </div>
      </div>
      <p>Stoney shows paper!</p>
      <p>Nothing happened...</p>
    <audio autoplay="false">
      <source src="lose.wav" type="audio/mpeg">
      Your browser does not support the audio element.
    </audio>
    <% else %>
      <!-- img for Paper vs Scissors -->
      <div class="attack">
        <div class="rps-challenge">
          <img src="paper.png">
          <img src="scissors-win.png">
        </div>
      </div>
    <p>Stoney shows scissors!</p>
    <p>Scissors snip snipped paper, uh oh! <%= @player_1 %> lost!</p>
    <audio autoplay="false">
      <source src="lose.wav" type="audio/mpeg">
      Your browser does not support the audio element.
    </audio>
    <% end %>
    <form class="form-block" method='get' action='/play'>
        <button type="submit" value="Play again" class="button btn btn-default">
          Play again
        </button>
    </form>
  </body>
</html>